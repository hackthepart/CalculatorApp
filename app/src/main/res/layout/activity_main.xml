<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#000"
    tools:context="com.example.android.calculator.MainActivity"
    android:orientation="vertical">

    <TextView
        android:text="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="36dp"
        android:textStyle="italic"
        android:background="#A9A9A9"
        android:textColor="#ffff"
        android:id="@+id/result_tv"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffff"
        android:textSize="24dp"
        android:text="0"
        android:layout_margin="3dp"
        android:id="@+id/input_et"
       />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AC"
        android:background="#ff00"
        android:textColor="#ffff"
        android:id="@+id/clear"
        android:onClick="clear"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:layout_weight="1"
            android:background="#A9A9A9"
            android:textColor="#ffff"
            android:id="@+id/add"
            android:onClick="add"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:layout_weight="1"
            android:background="#A9A9A9"
            android:textColor="#ffff"
            android:id="@+id/subtract"
            android:onClick="subtract"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x"
            android:layout_weight="1"
            android:id="@+id/multiply"
            android:background="#A9A9A9"
            android:textColor="#ffff"
            android:onClick="multiply"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:layout_weight="1"
            android:background="#A9A9A9"
            android:textColor="#ffff"
            android:id="@+id/divide"
            android:onClick="divide"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sin"
            android:background="#A9A9A9"
            android:textColor="#ffff"
            android:layout_weight="1"
            android:id="@+id/sine"
            android:onClick="sine"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#A9A9A9"
            android:textColor="#ffff"
            android:text="cos"
            android:id="@+id/cosine"
            android:onClick="cosine"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="tan"
            android:background="#A9A9A9"
            android:textColor="#ffff"
            android:id="@+id/tangent"
            android:onClick="tangent"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="exp"
            android:layout_weight="1"
            android:background="#A9A9A9"
            android:textColor="#ffff"
            android:id="@+id/exponent"
            android:onClick="exponent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="("
            android:background="#A9A9A9"
            android:textColor="#ffff"
            android:layout_weight="1"
            android:id="@+id/openBracket"
            android:onClick="openBracket"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#A9A9A9"
            android:textColor="#ffff"
            android:text=")"
            android:id="@+id/closeBracket"
            android:onClick="closeBracket"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="|X|"
            android:background="#A9A9A9"
            android:textColor="#ffff"
            android:id="@+id/absolute"
            android:onClick="absolute"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:layout_weight="1"
            android:background="#A9A9A9"
            android:textColor="#ffff"
            android:id="@+id/modulus"
            android:onClick="modulus"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:background="#A9A9A9"
            android:textColor="#ffff"
            android:layout_weight="1"
            android:onClick="value1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:layout_weight="1"
            android:background="#A9A9A9"
            android:textColor="#ffff"
            android:onClick="value2"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:layout_weight="1"
            android:background="#A9A9A9"
            android:textColor="#ffff"
            android:onClick="value3"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOG"
            android:layout_weight="1"
            android:background="#A9A9A9"
            android:textColor="#ffff"
            android:id="@+id/log_X"
            android:onClick="log_X"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:layout_weight="1"
            android:background="#A9A9A9"
            android:textColor="#ffff"
            android:onClick="value4"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:layout_weight="1"
            android:background="#A9A9A9"
            android:textColor="#ffff"
            android:onClick="value5"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:layout_weight="1"
            android:background="#A9A9A9"
            android:textColor="#ffff"
            android:onClick="value6"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="^"
            android:layout_weight="1"
            android:background="#A9A9A9"
            android:textColor="#ffff"
            android:id="@+id/power"
            android:onClick="power"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:layout_weight="1"
            android:background="#A9A9A9"
            android:textColor="#ffff"
            android:onClick="value7"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="8"
            android:background="#A9A9A9"
            android:textColor="#ffff"
            android:onClick="value8"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#A9A9A9"
            android:textColor="#ffff"
            android:text="9"
            android:onClick="value9"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sqrt(x)"
            android:layout_weight="1"
            android:background="#A9A9A9"
            android:textColor="#ffff"
            android:id="@+id/root"
            android:onClick="root"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:layout_weight="1"
            android:background="#A9A9A9"
            android:textColor="#ffff"
            android:id="@+id/decimal"
            android:onClick="decimal"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:background="#A9A9A9"
            android:textColor="#ffff"
            android:onClick="value0"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="="
            android:id="@+id/display"
            android:background="#A9A9A9"
            android:textColor="#ffff"
            android:onClick="display"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DEL"
            android:layout_weight="1"
            android:background="#A9A9A9"
            android:textColor="#ffff"
            android:id="@+id/back"
            android:onClick="back"/>

    </LinearLayout>

</LinearLayout>
